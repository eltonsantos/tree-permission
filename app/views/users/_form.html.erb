<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, required: true, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br>
    <%= f.text_field :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br>
    <%= f.text_field :password_confirmation, required: true %>
  </div>

  <div class="field">
    <%= f.label :active %><br>
    <%= f.check_box :active %>
  </div>

  <hr />

  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>